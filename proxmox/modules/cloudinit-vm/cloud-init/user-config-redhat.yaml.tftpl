#cloud-config
locale: en_US
timezone: America/Sao_Paulo
hostname: ${name}
fqdn: ${name}.${domain}
prefer_fqdn_over_hostname: false
package_upgrade: true
package_reboot_if_required: true
packages:
  - qemu-guest-agent
  - vim
  - htop
  - strace
  - telnet
  - curl
  - iotop
  - setroubleshoot
  - jq

users:
  - name: ${username}
    groups: sudo
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - ${ssh_authorized_keys}

bootcmd:
  - [ cloud-init-per, once, epel-release, dnf, install, "-y", epel-release ]

runcmd:
  - systemctl enable --now qemu-guest-agent.service
  - systemctl reload systemd-networkd.service
